{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Principal": {
        "Federated": "arn:aws:iam::483647879983:oidc-provider/token.actions.githubusercontent.com"
      },
      "Action": "sts:AssumeRoleWithWebIdentity",
      "Condition": {
        "StringEquals": {
          "token.actions.githubusercontent.com:aud": "sts.amazonaws.com"
        },
        "StringLike": {
          "token.actions.githubusercontent.com:sub": [
            "repo:Kennethfeh/CI-CD-Deployment-to-EC2:ref:refs/heads/main",
            "repo:Kennethfeh/CI-CD-Deployment-to-EC2:ref:refs/heads/*",
            "repo:Kennethfeh/CI-CD-Deployment-to-EC2:pull_request"
          ]
        }
      }
    }
  ]
}
